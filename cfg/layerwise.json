{
    "name": "KnowledgeDistillation",
    "n_gpu": 1,
    "teacher": {
        "type": "DeepWV3Plus",
        "args": {
            "num_classes": 19
        },
        "snapshot": "checkpoints/cityscapes_best.pth"
    },
    "transforms": {
        "joint_transforms": {
            "crop_size": 512,
            "scale_min": 0.5,
            "scale_max": 2,
            "ignore_label": 255
        },
        "extended_transforms": {
            "color_aug": 0.2,
            "blur": "gaussian"
        }
    },
    "train_data_loader": {
        "type": "CityscapesDataloader",
        "args": {
            "data_dir": "data/",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 0,
            "split": "train",
            "mode": "fine",
            "target_type": "semantic"
        }
    },
    "val_data_loader": {
        "type": "CityscapesDataloader",
        "args": {
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "split": "val",
            "mode": "fine",
            "target_type": "semantic",
            "num_samples": 50
        }
    },
    "test_data_loader": {
        "type": "CityscapesDataloader",
        "args": {
            "data_dir": "data/",
            "batch_size": 1,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "split": "test",
            "mode": "fine",
            "target_type": "semantic",
            "num_samples": 50
        }
    },
    "optimizer": {
        "type": "RAdam",
        "args": {
            "lr": 0.01
        }
    },
    "supervised_loss": {
        "type": "CrossEntropyLoss2d",
        "args": {
            "ignore_index": 255
        }
    },
    "kd_loss": {
        "type": "MSELoss",
        "args": {
            "reduction": "mean",
            "num_classes": 1
        }
    },
    "hint_loss": {
        "type": "MSELoss",
        "args": {
            "reduction": "mean",
            "num_classes": 1000
        }
    },
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1,
            "gamma": 0.2
        }
    },
    "trainer": {
        "name": "LayerwiseTrainer",
        "epochs": 1000,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_mIoU",
        "early_stop": 1000,
        "accumulation_steps": 1,
        "log_step": 5,
        "do_validation_interval": 4,
        "lr_scheduler_step_interval": 15,
        "len_epoch": 200,
        "tensorboard": true
    },
    "pruning": {
        "pruner": {
            "dilation": 12,
            "padding": 12,
            "kernel_size": 3
        },
        "pruning_plan": [
            {
                "name": "mod4.block2.convs.conv2",
                "epoch": 1
            },
            {
                "name": "mod4.block3.convs.conv1",
                "epoch": 3
            },
            {
                "name": "mod4.block3.convs.conv2",
                "epoch": 6
            },
            {
                "name": "mod4.block4.convs.conv2",
                "epoch": 9
            },
            {
                "name": "mod4.block5.convs.conv2",
                "epoch": 12
            },
            {
                "name": "mod4.block6.convs.conv2",
                "epoch": 15
            },
            {
                "name": "mod5.block2.convs.conv2",
                "epoch": 18
            },
            {
                "name": "mod7.block1.convs.conv2",
                "epoch": 21
            },
            {
                "name": "aspp.features.1.0",
                "epoch": 24
            },
            {
                "name": "aspp.features.2.0",
                "epoch": 27
            },
            {
                "name": "aspp.features.3.0",
                "epoch": 30
            }
        ],
        "hint": [
            {
                "name": "mod4.block2.convs.conv2",
                "epoch": 1
            },
            {
                "name": "mod4.block3.convs.conv1",
                "epoch": 3
