            {
                "name": "aspp.features.3.0",
                "epoch": 30
            }
        ]
    },
    "weight_scheduler": {
        "alpha": {
            "value": 0.0001,
            "anneal_rate": 2,
            "max": 0
        },
        "beta": {
            "value": 0.99,
            "anneal_rate": 0.95,
            "min": 0.99
        },
        "gamma": {
            "value": 1,
            "anneal_rate": 1
        }
    },
    "test": {
        "type": "sliding",
        "args": {
            "scales": [1.0],
            "crop_size": 1024
        }
    },
    "submission": {
        "save_output": true,
        "path_output": "submission/",
        "ext": "png"
    }
}