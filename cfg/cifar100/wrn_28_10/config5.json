{
    "name": "Cifar10_WRN2810_Config5",
    "n_gpu": 1,
    "teacher": {
        "type": "wrn",
        "args": {
            "num_classes": 100,
            "depth": 28,
            "widen_factor": 10
        },
        "snapshot": "checkpoints/cifar100/wrn-28-10.pth"
    },
    "train_data_loader": {
        "type": "Cifar100Dataloader",
        "args": {
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.0001,
            "num_workers": 0,
            "training": true
        }
    },
    "test_data_loader": {
        "type": "Cifar100Dataloader",
        "args": {
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "training":  false
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.1
        }
    },
    "supervised_loss": {
        "type": "CrossEntropyLoss2d",
        "args": {
            "ignore_index": 255
        }
    },
    "kd_loss": {
        "type": "KLDivergenceLoss",
        "args": {
            "temperature": 5
        }
    },
    "hint_loss": {
        "type": "MSELoss",
        "args": {
            "reduction": "mean",
            "num_classes": 1
        }
    },
    "metrics": ["accuracy", "top_k_acc"],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [15, 25],
            "gamma": 0.2
        }
    },
    "trainer": {
        "name": "ClassificationTrainer",
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max test_accuracy",
        "early_stop": 1000,
        "accumulation_steps": 1,
        "log_step": 100,
        "do_validation_interval": 1,
        "lr_scheduler_step_interval": 15,
        "tensorboard": true
    },
    "pruning": {
        "args": {
            "dilation": 1,
            "padding": 1,
            "kernel_size": 3
        },
        "hint": [
            {
                "name": "block3",
                "epoch": 1
            }
        ],
        "unfreeze": [
            {
                "name": "block2",
                "epoch": 1
            }
        ],
        "pruning_plan": [
            {
                "name": "block2.layer.1.conv2",
                "epoch": 1
            },
            {
                "name": "block2.layer.1.conv1",
                "epoch": 1
            },
            {
                "name": "block2.layer.1.conv2",
                "epoch": 1
            },
            {
                "name": "block2.layer.2.conv1",
                "epoch": 1
            },
            {
                "name": "block2.layer.2.conv2",
                "epoch": 1
            }
        ]
    },
    "weight_scheduler": {
        "alpha": {
            "value": 0.0001,
            "anneal_rate": 2,
            "max": 0
        },
        "beta": {
            "value": 0.99,
            "anneal_rate": 0.95,
            "min": 0.99
        },
        "gamma": {
            "value": 1,
            "anneal_rate": 1
        }
    },
    "test": {
        "type": "sliding",
        "args": {
            "scales": [1.0],
            "crop_size": 1024
        }
    },
    "submission": {
        "save_output": true,
        "path_output": "submission/",
        "ext": "png"
    }
}