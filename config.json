{
    "name": "KnowledgeDistillation",
    "n_gpu": 1,

    "student": {
        "arch": "DeepWV3Plus",
        "args": {}
    },
    "teacher": {
        "type": "DeepWV3Plus",
        "args": {},
        "snapshot": "checkpoints/cityscapes_best.pth"
    },
    "train_data_loader": {
        "type": "CityScapesDataloader",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2,
            "split": "train",
            "mode": "gtFine",
            "target_type": "semantic"
        }
    },
    "val_data_loader": {
        "type": "CityScapesDataloader",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 2,
            "split": "val",
            "mode": "gtFine",
            "target_type": "semantic"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
