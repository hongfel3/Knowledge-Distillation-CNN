{
    "name": "KnowledgeDistillation",
    "n_gpu": 1,

    "student": {
        "type": "DeepWV3Plus",
        "args": {"num_classes": 19}
    },
    "teacher": {
        "type": "DeepWV3Plus",
        "args": {"num_classes": 19},
        "snapshot": "checkpoints/cityscapes_best.pth"
    },
    "ta": false,
    "transforms": {
        "joint_transforms": {
            "crop_size": 896,
            "scale_min": 0.5,
            "scale_max": 2,
            "ignore_index": 255
        },
        "extended_transforms": {
            "color_aug": 0,
            "blur": "gaussian"
        }
    },
    "train_data_loader": {
        "type": "CityScapesDataloader",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2,
            "split": "train",
            "mode": "fine",
            "target_type": "semantic"
        }
    },
    "val_data_loader": {
        "type": "CityScapesDataloader",
        "args":{
            "data_dir": "data/",
            "batch_size": 16,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 2,
            "split": "val",
            "mode": "fine",
            "target_type": "semantic"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }, 
    "TA": {
        "tc_path": "./pretrained_models/cityscapes_best.pth",
        "tc_arch": "models.deeplabv3.DeepWV3Plus",
        "lambda_student": 0.5,
        "T_student": 1
    },
    "segmentation":{
        "num_classes":19
    }
}
